source ~/.vimrc

nnoremap <C-t> :action GotoFile<CR>
nnoremap <C-s> :action FindInPath<CR>
nnoremap <C-f> :action ActivateProjectToolWindow<CR>
nnoremap <C-w><C-w> :action RecentFiles<CR>

nnoremap gr :action GotoDeclaration<CR>
nnoremap gi :action GotoImplementation<CR>
nnoremap gs :action GotoSuperMethod<CR>
nnoremap gd gd

nnoremap <leader>f :action ShowReformatFileDialog<CR>
vnoremap <leader>f :action ShowReformatFileDialog<CR>
nnoremap <leader>i :action OptimizeImports<CR>
nnoremap <leader>rn :action RenameElement<CR>
nnoremap <leader>b :action ToggleLineBreakpoint<CR>
nnoremap <leader>B :action ViewBreakpoints<CR>

command! Blame action Annotate
command! Diff action Compare.LastVersion
command! Diffs action Vcs.Show.Local.Changes
command! Log action Vcs.ShowTabbedFileHistory
command! Logs action Vcs.Show.Log

nmap <Space> <Plug>(easymotion-bd-fn)
vmap <Space> <Plug>(easymotion-bd-tn)
omap <Space> <Plug>(easymotion-bd-tn)

nnoremap <leader>o :action OverrideMethods<CR>

