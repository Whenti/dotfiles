source ~/.vimrc_base

nnoremap <C-t> :action GotoFile<CR>
nnoremap <C-f> :action FindInPath<CR>

nnoremap gr :action GotoDeclaration<CR>
nnoremap gi :action GotoImplementation<CR>

nnoremap gs :action GotoSuperMethod<CR>

nnoremap <C-w>b :action RecentFiles<CR>
nnoremap <C-w>t :action ActivateProjectToolWindow<CR>

nnoremap <leader>F :action ShowReformatFileDialog<CR>
nnoremap <leader>f :action ReformatCode<CR>
vnoremap <leader>f :action ReformatCode<CR>
nnoremap <leader>i :action OptimizeImports<CR>
nnoremap <leader>rn :action RenameElement<CR>

command! Gblame action Annotate
command! Diff action Compare.LastVersion
command! Diffs action Vcs.Show.Local.Changes
command! Commit action Vcs.ShowTabbedFileHistory
command! Commits action Vcs.Show.Log

set ideamarks
set ideajoin
set surround
set commentary

nnoremap [[ ?\v\<class\s<CR>
nnoremap ]] /\v\<class\s<CR>
nnoremap [m ?\v\<def\s<CR>
nnoremap ]m /\v\<def\s<CR>

vnoremap [[ ?\v\<class\s<CR>
vnoremap ]] /\v\<class\s<CR>
vnoremap [m ?\v\<def\s<CR>
vnoremap ]m /\v\<def\s<CR>

